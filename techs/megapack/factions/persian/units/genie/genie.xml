		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/genie_ack1.wav"/>
			<sound path="sounds/genie_ack2.wav"/>
			<sound path="sounds/genie_ack3.wav"/>
			<sound path="sounds/genie_ack4.wav"/>
