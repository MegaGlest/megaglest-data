<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="4" />
		<height value="4" />
		<max-hp value="6000" regeneration="0" start-percentage="1.0" />
		<max-ep value="0" />
		<armor value="0" />
		<armor-type value="wood"/>		
		<sight value="5" />
		<time value="150" />
		<multi-selection value="false" />
		<cellmap value="true">
			<row value="1011"/>
			<row value="0000"/>
			<row value="1011"/>
			<row value="1011"/>
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
			<property value="burnable"/>
		</properties>
		<light enabled="false" />
		<rotationAllowed value="false" />
		<unit-requirements>
			<unit name="castle" />
			<unit name="blacksmith" />
		</unit-requirements>
		<upgrade-requirements />
		<resource-requirements>
			<resource name="gold" amount="200" />
			<resource name="wood" amount="200" />
		</resource-requirements>
		<resources-stored>
			<resource name="wood" amount="200" />
		</resources-stored>
		<image path="images/technodrome.bmp"/>
		<image-cancel path="../archer/images/tech_cancel.bmp"/>
		<meeting-point value="true" image-path="../barracks/images/meeting_point.bmp"/>
		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav" />
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav" />
		</command-sounds>
	</parameters>
	
	<!-- *** skills *** -->
	<skills>

		<skill>
			<name value="be_built_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="../castle/construction_models/technodrome_construction.g3d"/>
			<sound enabled="false"/>
			<type value="be_built"/>
		</skill>
		
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="100"/>
			<animation path="models/technodrome.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/technodrome.g3d"/>
			<sound enabled="false"/>
		</skill>	
		
		<skill>
			<type value="upgrade"/>
			<name value="upgrade_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/technodrome.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0" />
			<speed value="300"/>
			<anim-speed value="300" />
			<animation path="../castle/destruction_models/technodrome_destruction.g3d"/>
			<particles value="true">
				<particle-file path="smoke_particles.xml"/>
				<particle-file path="glow_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall5.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

	</skills>

	<!-- *** commands *** -->
	<commands>
		<command>
			<type value="produce"/>
			<name value="produce_technician"/>
			<image path="../technician/images/technician.bmp"/>
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="technician"/>
		</command>
	
		<command>
			<type value="upgrade"/>
			<name value="research_advanced_architecture"/>
			<image path="../../upgrades/advanced_architecture/images/advanced_architecture.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<upgrade-skill value="upgrade_skill"/>
			<produced-upgrade name="advanced_architecture"/>
		</command>
		
		<command>
			<type value="upgrade"/>
			<name value="research_robotics"/>
			<image path="../../upgrades/robotics/images/robotics.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<upgrade-skill value="upgrade_skill"/>
			<produced-upgrade name="robotics"/>
		</command>
		
	</commands>
</unit>
