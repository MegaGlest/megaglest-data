<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="1"/>
		<height value="1"/>
		<max-hp value="700" regeneration="2"/>
		<max-ep value="0"/>
		<armor value="3"/>
		<armor-type value="organic"/>
		<sight value="12"/>
		<time value="30"/>
		<multi-selection value="true"/>
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land"/>
		</fields>
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="gold" amount="50"/>
			<resource name="stone" amount="20"/>
			<resource name="food" amount="1"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/wild_sow.bmp"/>
		<image-cancel path="../archer/images/tech_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/pig_select1.wav"/>
			<sound path="$COMMONDATAPATH/sounds/pig_select2.wav"/>
			<sound path="$COMMONDATAPATH/sounds/pig_select3.wav"/>
			<sound path="$COMMONDATAPATH/sounds/pig_select4.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/pig_ack1.wav"/>
			<sound path="$COMMONDATAPATH/sounds/pig_ack2.wav"/>
			<sound path="$COMMONDATAPATH/sounds/pig_ack3.wav"/>
			<sound path="$COMMONDATAPATH/sounds/pig_ack4.wav"/>
			<sound path="sounds/pig_ack5.wav"/>
		</command-sounds>

	</parameters>

	<!-- *** skills *** -->

	<skills>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="40"/>
			<animation path="models/pig_standing.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/pig_walking.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>
			<ep-cost value="0"/>
			<speed value="40"/>
			<anim-speed value="250"/>
			<animation path="models/pig_walking.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/pig_attack1.wav"/>
				<sound-file path="sounds/pig_attack2.wav"/>
				<sound-file path="sounds/pig_attack3.wav"/>
			</sound>
			<attack-strength value="75"/>
			<attack-var value="40"/>
			<attack-range value="1"/>
			<attack-type value="magic"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<attack-start-time value="0.3"/>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="false">
			</sound>
			</projectile>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>
			<ep-cost value="0"/>
			<speed value="120"/>
			<anim-speed value="80"/>
			<animation path="models/pig_dying.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/pig_die1.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/pig_die2.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/pig_die3.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/pig_die4.wav"/>
			</sound>
			<fade value="false"/>
		</skill>

	</skills>

	<!-- *** commands *** -->

	<commands>

		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../archer/images/tech_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../archer/images/tech_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/pig_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

	</commands>
</unit>
