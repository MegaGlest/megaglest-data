	<!-- *** skills *** -->

	<skills>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="50"/>
			<animation path="models/golem_standing.g3d"/>
			<particles value="true">
				<particle-file path="fire_particles.xml"/>
				<particle-file path="fire_particles2.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>
