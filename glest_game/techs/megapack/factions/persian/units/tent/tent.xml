<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="4" />
		<height value="2" />
		<max-hp value="3000" regeneration="0"/>
		<max-ep value="0" />
		<armor value="0" />
		<armor-type value="leather"/>		
		<sight value="12" />
		<time value="50" />
		<multi-selection value="false" />
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
			<!--property value="burnable"/-->
		</properties>
		<light enabled="false" />
		<damage-particles value="true">
				<particle-file path="fire_particles.xml"/>
				<particle-file path="smoke_particles.xml"/>
		</damage-particles>
		<unit-requirements>
			<unit name="temple" />
		</unit-requirements>
		<upgrade-requirements />
		<resource-requirements>
			<resource name="gold" amount="200" />
			<resource name="wood" amount="100" />
			<resource name="stone" amount="20" />
		</resource-requirements>
		<resources-stored>
			<resource name="wood" amount="200" />
		</resources-stored>
		<image path="images/tent.bmp"/>
		<image-cancel path="../genie/images/tech_cancel.bmp"/>
		<meeting-point value="true" image-path="../temple/images/meeting_point.bmp"/>
		<selection-sounds enabled="true">
			<sound path="../temple/sounds/tech_click.wav" />
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="../temple/sounds/tech_click.wav" />
		</command-sounds>
	</parameters>
	
	<skills>
		<skill>
			<name value="be_built_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="300" />
			<animation path="models/tent2_construction.g3d" />
			<sound enabled="false" />
			<type value="be_built" />
		</skill>
		
		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>	
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="300" />
			<animation path="models/tent2_produce.g3d" />
			<particles value="true">
				<particle-file path="ghost_particles.xml"/>
			</particles>
			<sound enabled="false" />
		</skill>	
		<skill>
			<type value="produce"/>
			<name value="produce_flying_carpet_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="200"/>
			<animation path="models/tent2_produce.g3d"/>
  			<sound enabled="false" />
		</skill>
		<skill>
			<type value="produce"/>
			<name value="produce_magician_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="100"/>
			<animation path="models/tent2_produce.g3d"/>
  			<sound enabled="false" />
		</skill>

		<skill>
			<type value="stop" />
			<name value="stop_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="50" />
			<animation path="models/tent2_standing.g3d" />
			<sound enabled="false" />
		</skill>	
		
		<skill>
			<type value="upgrade" />
			<name value="upgrade_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="150" />
			<animation path="models/tent2_upgrade.g3d" />
			<particles value="true">
				<particle-file path="magic_lvl1_particles.xml"/>
				<particle-file path="magic_lvl1_particles2.xml"/>
			</particles>
			<sound enabled="true" start-time="0.3">
				<sound-file path="sounds/anvil1.wav"/>
				<sound-file path="sounds/anvil2.wav"/>
				<sound-file path="sounds/anvil3.wav"/>
				<sound-file path="sounds/anvil4.wav"/>
			</sound>
		</skill>

		<skill>
			<type value="upgrade" />
			<name value="upgrade_skill2"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="150" />
			<animation path="models/tent2_upgrade.g3d" />
			<particles value="true">
				<particle-file path="magic_lvl2_particles.xml"/>
				<particle-file path="magic_lvl2_particles2.xml"/>
			</particles>
			<sound enabled="true" start-time="0.3">
				<sound-file path="sounds/anvil1.wav"/>
				<sound-file path="sounds/anvil2.wav"/>
				<sound-file path="sounds/anvil3.wav"/>
				<sound-file path="sounds/anvil4.wav"/>
			</sound>
		</skill>

		<skill>
			<type value="die" />
			<name value="die_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="300" />
			<animation path="models/tent2_burned.g3d" />
			<particles value="true">
				<particle-file path="fire_particles.xml"/>
				<particle-file path="smoke_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="../temple/sounds/tech_building_fall1.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

	</skills>

	<commands>
		<command>
			<type value="produce"/>
			<name value="produce_genie" />
			<image path="images/genie.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="genie"/>
		</command>
		<command>
			<type value="produce"/>
			<name value="produce_flying_carpet"/>
			<image path="images/flying_carpet.bmp"/>
			<unit-requirements>
			</unit-requirements>
			<upgrade-requirements />
			<produce-skill value="produce_flying_carpet_skill"/>
			<produced-unit name="flying_carpet"/>
			
		</command>		
		<command>
			<type value="produce"/>
			<name value="produce_magician"/>
			<image path="images/magician.bmp"/>
			<unit-requirements>
			</unit-requirements>
			<upgrade-requirements />
			<produce-skill value="produce_magician_skill"/>
			<produced-unit name="magician"/>
			
		</command>		
		<command>
			<type value="upgrade"/>
			<name value="upgrade_magic_level_1" />
			<image path="../../upgrades/magic_level_1/images/magic1.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<upgrade-skill value="upgrade_skill"/>
			<produced-upgrade name="magic_level_1"/>
		</command>
		
		<command>
			<type value="upgrade"/>
			<name value="upgrade_magic_level_2" />
			<image path="../../upgrades/magic_level_2/images/magic2.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<upgrade-skill value="upgrade_skill2"/>
			<produced-upgrade name="magic_level_2"/>
		</command>
		
	</commands>
</unit>
