		<command>
			<type value="upgrade"/>
			<name value="create_training_field"/>
			<image path="../../upgrades/training_field/images/training_field.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<upgrade-skill value="upgrade_skill"/>
			<produced-upgrade name="training_field"/>
		</command>				

