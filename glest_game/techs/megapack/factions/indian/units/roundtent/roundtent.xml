		<command>
			<type value="produce"/>
			<name value="produce_axe_indian" />
			<image path="../axe_indian/images/axe_indian.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="axe_indian"/>
		</command>

		<!-- *** command 2 *** -->
		<command>
			<type value="produce"/>
