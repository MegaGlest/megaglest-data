			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="fire_archer"/>
		</command>
		<!-- *** command 5 *** -->
		<command>
			<type value="produce"/>
			<name value="produce_spearman" />
			<image path="../spearman/images/spearman.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="spearman"/>
