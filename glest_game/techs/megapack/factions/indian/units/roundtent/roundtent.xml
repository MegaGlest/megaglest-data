		<size value="4" />
		<height value="2" />
		<max-hp value="6000" regeneration="0"/>
		<max-ep value="0" />
		<armor value="0" />
		<armor-type value="stone"/>
		<sight value="6" />
		<time value="70" />
		<multi-selection value="false" />
		<cellmap value="true">
			<row value="1111"/>
			<row value="1001"/>
			<row value="1001"/>
			<row value="1001"/>
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
			<property value="burnable"/>
		</properties>
		<light enabled="false" />
		<unit-requirements>
			<unit name="tent" />
		</unit-requirements>
		<upgrade-requirements />
		<resource-requirements>
			<resource name="gold" amount="150" />
			<resource name="stone" amount="150" />
