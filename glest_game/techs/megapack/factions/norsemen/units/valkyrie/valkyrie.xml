<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="800" regeneration="2"/>
		<max-ep value="0"/>
		<armor value="80"/>	
		<armor-type value="leather"/>				
		<sight value="10"/>
		<time value="50"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
			<unit name="blacksmith"/>
		</unit-requirements>
		<upgrade-requirements>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="wood" amount="100"/>
			<resource name="gold" amount="250"/>
			<resource name="food" amount="1"/>						
		</resource-requirements>
		<resources-stored/>
		<image path="images/valkyrie.bmp"/>
		<image-cancel path="../archer/images/tech_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/valkyrie_select1.wav"/>
			<sound path="sounds/valkyrie_select2.wav"/>
			<sound path="sounds/valkyrie_select3.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/valkyrie_ack1.wav"/>
			<sound path="sounds/valkyrie_ack2.wav"/>
			<sound path="sounds/valkyrie_ack3.wav"/>
			<sound path="sounds/valkyrie_ack4.wav"/>
		</command-sounds>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="45"/>
			<animation path="models/valkyrie_standing.g3d"/>
			<sound enabled="false"/>
		</skill>
		

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="90"/>
			<animation path="models/valkyrie_walking.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="charge_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="125"/>
			<animation path="models/valkyrie_charging.g3d"/>
			<sound enabled="false"/>
		</skill>


		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="100"/>
			<anim-speed value="50"/>
			<animation path="models/valkyrie_attacking.g3d"/>
			<sound enabled="true" start-time="0.47">
				<sound-file path="sounds/valkyrie_attack1.wav"/>
				<sound-file path="sounds/valkyrie_attack2.wav"/>
				<sound-file path="sounds/valkyrie_attack3.wav"/>
				<sound-file path="sounds/valkyrie_attack4.wav"/>
				<sound-file path="sounds/valkyrie_attack5.wav"/>
				<sound-file path="sounds/valkyrie_attack6.wav"/>
			</sound> 
			<attack-strenght value="300"/>
			<attack-var value="100"/>
			<attack-range value="1"/>
			<attack-type value="sword"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<attack-start-time value="0"/>
			<projectile value="false"/>
			<splash value="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="airattack_skill"/>		
			<ep-cost value="0"/>
			<speed value="110"/>
			<anim-speed value="50"/>
			<animation path="models/valkyrie_airattacking.g3d"/>
			<sound enabled="true" start-time="0.0">
				<sound-file path="sounds/summoner_attack1.wav"/>
				<sound-file path="sounds/summoner_attack2.wav"/>
				<sound-file path="sounds/summoner_attack3.wav"/>
				<sound-file path="sounds/summoner_attack4.wav"/>		
				<sound-file path="sounds/summoner_attack5.wav"/>
				<sound-file path="sounds/summoner_attack6.wav"/>
				<sound-file path="sounds/summoner_attack7.wav"/>
				<sound-file path="sounds/summoner_attack8.wav"/>
			</sound> 
			<attack-strenght value="170"/>
			<attack-var value="50"/>
			<attack-range value="7"/>
			<attack-type value="magic"/>
			<attack-fields>
                                <field value="air"/>
			</attack-fields>
			<attack-start-time value="0.2"/>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/summoner_hit1.wav"/>
					<sound-file path="sounds/summoner_hit2.wav"/>
					<sound-file path="sounds/summoner_hit3.wav"/>
					<sound-file path="sounds/summoner_hit4.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<!-- *** skill 3 *** -->
		<skill>
			<type value="morph"/>
			<name value="morph_skill"/>		
			<ep-cost value="0"/>
			<speed value="500"/>
			<anim-speed value="80"/>
			<animation path="models/valkyrie_standing.g3d"/>
			<sound enabled="false"/>
		</skill>	

		<!-- *** skill 4 *** -->
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/valkyrie_dying.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/valkyrie_die1.wav"/>
				<sound-file path="sounds/valkyrie_die2.wav"/>
				<sound-file path="sounds/valkyrie_die3.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>


	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../archer/images/tech_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../archer/images/tech_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/sword_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="charge_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		<command>
			<type value="attack"/>
			<name value="airattack"/>
			<image path="images/air_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="charge_skill"/>
			<attack-skill value="airattack_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../archer/images/tech_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements>
			</upgrade-requirements>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
			<attack-skill value="airattack_skill"/>
		</command>

	</commands>
</unit>
